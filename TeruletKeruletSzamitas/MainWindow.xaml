<Window x:Class="TeruletKeruletSzamitas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeruletKeruletSzamitas"
        mc:Ignorable="d"
        Title="Háromszög Kalkulátor" Height="350" Width="450">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Háromszög kalkulátor" FontSize="20" FontWeight="Bold" Margin="0 0 0 20"/>

            <TextBlock Text="Hosszúság a:"/>
            <TextBox Name="txtSideA" Margin="0 5 0 10"/>

            <TextBlock Text="Hosszúság b:"/>
            <TextBox Name="txtSideB" Margin="0 5 0 10"/>

            <TextBlock Text="Hosszúság c:"/>
            <TextBox Name="txtSideC" Margin="0 5 0 10"/>

            <Button Content="Számol" Click="CalculateButton_Click" Width="100" Margin="0 20 0 0"/>

            <TextBlock Name="lblResult" FontSize="18" FontWeight="Bold" Margin="0 20 0 0"/>

        </StackPanel>
    </Grid>
</Window>
